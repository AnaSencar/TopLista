
@{
    ViewData["Title"] = "Index";
}

<div id="login">
    <div class="card">
        <div class="card-body">
            <div class="row justify-content-center">
                <div class="col-6">
                    <form v-on:submit.prevent="logIn()">
                        <div class="row mb-2">
                            <div class="col-3">
                                Korisničko ime
                            </div>
                            <div class="col-9">
                                <input type="text" :class="{ 'is-invalid' : $v.loginData.username.$error, 'form-control' : true }" v-model="$v.loginData.username.$model" />
                                <div v-if="!$v.loginData.username.required && $v.loginData.username.$error" class="invalid-feedback">
                                    Korisnicko ime je obavezno
                                </div>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-3">
                                Lozinka
                            </div>
                            <div class="col-9">
                                <input type="password" :class="{ 'is-invalid' : $v.loginData.password.$error, 'form-control' : true }" v-model="$v.loginData.password.$model" />
                                <div v-if="!$v.loginData.password.required && $v.loginData.password.$error" class="invalid-feedback">
                                    Lozinka je obavezna
                                </div>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <input type="submit" class="btn btn-outline-secondary" value="Login" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/LogIn/Index.js?t=20201207"></script>